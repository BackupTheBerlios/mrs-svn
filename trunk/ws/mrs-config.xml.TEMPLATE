	<ws>
		<service>search</service>
		<address>0.0.0.0</address>
		<port>8081</port>
		<threads>2</threads>

		<!-- list of databases to present -->
		<dbs>
			<db ignore-in-all="1">uniprot</db>
			<db>embl</db>
			<db>dbest</db>
			<db blast="1">pdb</db>
			<db>pdbfinder2</db>
			<db>omim</db>
