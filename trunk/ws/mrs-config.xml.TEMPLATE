			<db>uniuniq</db>
			<db>ligand-compound</db>
			<db>ligand-enzyme</db>
			<db>ligand-glycan</db>
			<db>ligand-reaction</db>
			<db>taxonomy</db>
			<db>go</db>
			<db>goa</db>
			<db>enzyme</db>
			<db>pfama</db>
			<db>pfamb</db>
			<db>pfamseed</db>
			<db>interpro</db>
			<db>prosite</db>
			<db>prosite_doc</db>
			<db>oxford</db>
			<db>mimmap</db>
			<db blast="1">sprot</db>
			<db blast="1">trembl</db>
			<db>gpcrdb</db>
			<db>prints</db>
			<db>gene</db>
		</dbs>
	</ws>
	
	<ws>
		<service>blast</service>
		<address>0.0.0.0</address>
		<port>8082</port>
		<threads>2</threads>
		
		<dbs>
			<db>pdb</db>
			<db>sprot</db>
			<db>trembl</db>
		</dbs>
	</ws>
	
	<ws>
		<service>clustalw</service>
		<address>0.0.0.0</address>
		<port>8083</port>
	</ws>
	
	<ws>
		<service>admin</service>
		<address>0.0.0.0</address>
		<port>8084</port>
	</ws>

	<!-- our private data provider, this databank should not be published
		 outside our department -->
